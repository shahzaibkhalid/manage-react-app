#! /usr/bin/env node
const {
  commitMessageCICheck,
  eslintCICheck,
  testCICheck,
  lockFileCICheck,
  branchNameCICheck
} = require('./shared')

function runPreCommitHooks() {
  console.log('Running some quality checks before code can be committed! ðŸ‘€\n')
  commitMessageCICheck()
    .then(_ => {
      eslintCICheck()
        .then(_ => {
          lockFileCICheck()
          branchNameCICheck()
          testCICheck()
        })
    })
}

runPreCommitHooks()
